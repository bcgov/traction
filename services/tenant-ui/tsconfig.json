{
  "compilerOptions": {
    // Language and module settings
    "target": "es2022",                     // Specifies ECMAScript target version
    "module": "NodeNext",                   // Specifies module code generation for Node ESM support
    "moduleResolution": "NodeNext",         // Module resolution strategy aligned with Node's behavior

    // Output configuration
    "outDir": "dist",                       // Directory for transpiled JavaScript output
    "sourceMap": true,                      // Enables generation of source maps

    // Interoperability and compatibility
    "resolveJsonModule": true,              // Allows importing .json files as modules
    "esModuleInterop": true,                // Enables default interoperability between ES and CommonJS modules
    "allowImportingTsExtensions": false,    // Disallows explicit .ts extension in import paths

    // Type checking behavior
    "strict": true,                         // Enables all strict type-checking options
    "isolatedModules": true,                // Ensures each file can be safely transpiled without type information
    "skipLibCheck": true,                   // Skips type checking of declaration files for faster builds
    "forceConsistentCasingInFileNames": true, // Disallows inconsistently cased imports

    // Type declarations for test runner
    "types": ["vitest/globals"]             // Includes Vitest global type declarations (e.g., describe, it)
  },

  // Project file inclusion
  "include": ["src", "test"]
}